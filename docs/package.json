{
  "name": "sfeir-school-github-action-dev",
  "version": "1.0.0",
  "description": "Sfeir School GitHub Action Dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sfeir-open-source/sfeir-school-github-action-dev.git"
  },
  "keywords": [
    "github",
    "github-actions",
    "development",
    "sfeir"
  ],
  "author": "sfeiriens",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sfeir-open-source/sfeir-school-github-action-dev/issues"
  },
  "homepage": "https://github.com/sfeir-open-source/sfeir-school-github-action-dev",
  "scripts": {
    "sass": "node-sass ./scss/slides.scss -o ./css/ --source-map=true --watch=\"scss\" --recursive=\"scss\"",
    "sass-once": "node-sass ./scss/slides.scss -o ./css/ --source-map=true ",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "live-server --port=4242 --open=\"./index.html\" --watch=\"markdown,scripts/\"",
    "start": "parallelshell \"npm run serve\" \"npm run sass\"",
    "copy-reveal": "cpx \"node_modules/reveal.js/**/*\" \"web_modules/reveal.js\" ",
    "prepare": "rm -rf web_modules && parallelshell \"npm run copy-reveal\"   \"snowpack --optimize\""
  },
  "dependencies": {
    "highlight.js": "^9.18.5",
    "lit-html": "^1.4.1",
    "reveal.js": "^3.9.2",
    "sfeir-school-theme": "^2.2.0"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.2",
    "live-server": "^1.2.2",
    "node-sass": "^4.14.1",
    "parallelshell": "3.0.1",
    "snowpack": "^1.7.1"
  },
  "snowpack": {
    "webDependencies": [
      "sfeir-school-theme/dist/**/*",
      "lit-html",
      "highlight.js/styles/**/*"
    ]
  }
}
